<Window x:Class="MedicalCenterFootball.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalCenterFootball"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="300">
    <Grid >
        <TextBlock Text="Войти" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="20" FontWeight="Bold"/>

        <StackPanel VerticalAlignment="Center" Margin="20,0,20,0" Height="190">
            <!-- Надпись для номера телефона -->
            <Label Content="Логин" IsEnabled="False" FontWeight="Bold"/>
            <TextBox Name="TbLoginLogin" Margin="0,0,0,10" />

            <!-- Надпись для пароля -->
            <Label Content="Пароль"  IsEnabled="False" FontWeight="Bold"/>
            <PasswordBox Name="PbLoginPassword" Margin="0,0,0,10" />
            <Button Content="Войти" Click="LoginButton_Click"  Height="32" Width="86"/>
        </StackPanel>
    </Grid>
</Window>
